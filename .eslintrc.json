{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
		"mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
		"no-console": [{
			"allow": [
				"log",
				"error"
			]
		}],
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
		"no-console": "off"
  }
}
